{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Omni-Sentinel",
  "version": "1.0.0",
  "identifier": "com.omnisentinel.app",
  "build": {
    "frontendDist": "../web/out"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Omni-Sentinel",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://*.neon.tech https://api.deepseek.com"
    }
  },
  "plugins": {
    "notification": {
      "all": true
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "Â© 2026 Omni-Sentinel",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "AI-Powered Log Observability Platform",
    "longDescription": "Omni-Sentinel is a next-generation log observability and AI diagnostic platform."
  }
}
